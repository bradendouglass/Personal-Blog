.row
  .twelve.columns
    %h1="#{@item[:title]}"
.row
  .twelve.columns
    %h2="Written for: #{@item[:created_at]}"
.row
  %div{:class => 'eight columns', :id => 'post'}
    =yield
.row
  .eight.columns
    %hr/
.row
  .eight.columns
    %p.homeButton="filed under: #{tags_for(@item, :base_url => 'http://duckduckgo.com/?q=' + '%23')}"
    - "#{home = @items.find {|i| i.identifier == '/'}}"
    %p.homeButton= "#{link_to('Back To List of Posts', home)}"
.row
  .eight.columns
    %div{:id => 'disqus_thread', :class => 'twelve columns'}
      %script{:src => "/js/disqus.js", :type => "text/javascript", :charset => "utf-8"}
