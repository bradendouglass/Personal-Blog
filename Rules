#!/usr/bin/env ruby
# A few helpful tips about the Rules file:
#
# * The order of rules is important: for each item, only the first matching
#   rule is applied.
#
# * Item identifiers start and end with a slash (e.g. “/about/” for the file
#   “content/about.html”). To select all children, grandchildren, … of an
#   item, use the pattern “/about/*/”; “/about/*” will also select the parent,
#   because “*” matches zero or more characters.
require 'compass'
require 'albino'
Compass.add_project_configuration 'config.rb'

compile '/posts/*' do
    rep.filter :erb
    rep.filter :bluecloth
    rep.layout 'post'
    rep.layout 'default'
end

compile '/posts/*', :rep => :summary do
    rep.filter :erb
    rep.filter :bluecloth
    rep.layout 'post_summary'
end

route '/posts/*', :rep => :summary do
    nil
end

compile '/stylz/*/' do
  case item[:extension]
  when 'sass'
    filter :sass, Compass.sass_engine_options
  when 'css'
    # for pigments(albino) css sheets. No point in turning into sass/scss
  end
end

compile '/js/*/' do
  # not a damn thing/mainly because my JS is choppy
end

compile '/feed/' do
  filter :erb
end

compile '*' do
  case item[:extension]
  when 'mdown' || 'html'
    filter :erb
    filter :bluecloth
  when 'haml'
    filter :haml
  end
  layout 'default' unless item[:layout] == 'none'
end

route '/stylz/*/' do
  item.identifier.chop + "." + "css"
end

route '/feed/' do
  '/feed.xml'
end

route '/js/*/' do
  item.identifier.chop + '.' + item[:extension]
end

route '*' do
  item.identifier + 'index.html'
end

layout '*', :haml, :filter => :html5
